@model Contact
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Ekle</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İletişim ile ilgili ekleme işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>

                        <form asp-action="UpdateContact" method="post">
                            <input type="hidden" asp-for="ContactId" />

                            <div class="form-group">
                                <label asp-for="Title">Başlık</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone1">Telefon-1</label>
                                <input asp-for="Phone1" type="text" class="form-control" placeholder="Örn: 0312 xxx xx xx" />
                                <span asp-validation-for="Phone1" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Phone2">Telefon-2</label>
                                <input asp-for="Phone2" type="text" class="form-control" placeholder="Örn: +90 xxx xxx xx xx" />
                                <span asp-validation-for="Phone2" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email1">Email-1</label>
                                <input asp-for="Email1" type="text" class="form-control" placeholder="Örn: ex@example.com" />
                                <span asp-validation-for="Email1" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email2">Email-2</label>
                                <input asp-for="Email2" type="text" class="form-control" placeholder="Örn: ex@example.com" />
                                <span asp-validation-for="Email2" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Adress">Adres</label>
                                <textarea asp-for="Adress" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Adress" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

