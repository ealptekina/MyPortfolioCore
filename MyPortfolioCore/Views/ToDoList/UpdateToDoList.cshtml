@model ToDoList
@{
    ViewData["Title"] = "UpdateToDoList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yapılacaklar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yapılacakları Güncelle</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yapılacaklar ile ilgili ekleme işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>

                        <form asp-action="UpdateToDoList" method="post">
                            <input type="hidden" asp-for="ToDoListId" />

                            <div class="form-group">
                                <label asp-for="Title">Yapılacak Bilgisi</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Date">Tarih</label>
                                <input asp-for="Date" type="date" class="form-control" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ImageUrl">Görsel Yolu</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status">Durum</label>
                                <select asp-for="Status" class="form-control">
                                    <option value="0">Yapılacak</option>
                                    <option value="1">Tamamlandı</option>
                                </select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


