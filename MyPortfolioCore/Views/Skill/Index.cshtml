@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Uzmanlık Alanları</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Uzmanlık Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Uzmanlıklar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>
                        <a href="/Skill/CreateSkill/" class="btn btn-primary">Yeni Uzmanlık Ekle</a>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Değer</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Title</td>
                                        <td>@item.Value</td>
                                        <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }


                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
