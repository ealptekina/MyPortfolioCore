@model Experience
@{
    ViewData["Title"] = "UpdateExperience";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Deneyimler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Deneyim Güncelle</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Deneyimler ile ilgili güncelleme işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>

                        <form asp-action="UpdateExperience" method="post">
                            <input type="hidden" asp-for="ExperienceId"/>
                            <div class="form-group">
                                <label asp-for="Head">Firma Bilgisi</label>
                                <input asp-for="Head" class="form-control" />
                                <span asp-validation-for="Head" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Title">Çalışılan Pozisyon</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Date">Tarih Aralığı</label>
                                <input asp-for="Date" type="text" class="form-control" placeholder="Örn: 2020 - 2022" />
                                <span asp-validation-for="Date" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-warning">Kaydet</button>
                        </form>



                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

