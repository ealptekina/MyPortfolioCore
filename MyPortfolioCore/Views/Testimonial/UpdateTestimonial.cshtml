@model Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Referanslarım</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Referanslar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Referanslar ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz :
                        </div>

                        <form asp-action="UpdateTestimonial" method="post">
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="form-group">
                                <label asp-for="NameSurname">Ad Soyad</label>
                                <input asp-for="NameSurname" class="form-control" />
                                <span asp-validation-for="NameSurname" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Title">Firma Adı</label>
                                <input asp-for="Title" class="form-control" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ImageUrl">Image Url</label>
                                <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Örn: /hola-master/images/testimonial2.jpg" />
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

